{% extends 'admin/base.html.twig' %}

{% block title %}Administration des reservations{% endblock %}

{% block body %}
   <div class="container-fluid">
        <h1 class="my-5">Administration des reservations </h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Visiteur</th>
                    <th>Annonce</th>
                    <th>Rerservee le</th>
                    <th>Au</th>
                    <th>Du</th>
                    <th>Duree</th>
                    <th>Montant</th>
                    
                    <th></th>
                </tr>
                
            </thead>

            <tbody>
                {% for booking in pagination.data %}
                <tr>
                    <td>{{booking.id}}</td>
                    <td>
                        <img src="{{booking.booker.picture}}" alt="" class="avatar avatar-micro">
                        {{booking.booker.fullName}}
                    </td>
                    <td>{{booking.ad.title}}</td>
                    <td>{{booking.createdAt|date("d/m/Y H:i" )}}</td>
                    <td>{{booking.startDate|date("d/m/Y" )}}</td>
                    <td>{{booking.endDate|date("d/m/Y" )}}</td>
                    <td>{{booking.duration}}</td>
                    <td>{{booking.amountTotal|number_format(2, ',', ' ')}} &euro;</td>
                    <td>
                        <a href="#" class="btn btn-primary">
                            <i class="fas fa-pen"></i>
                        </a>
                        <a href="#" class="btn btn-danger">
                             <i class="fas fa-trash"></i>
                        </a>
                        
                    </td>
                </tr>
                {% endfor %}  
            </tbody>
        </table>
        {{ pagination.display() }}   
    </div>
{% endblock %}
