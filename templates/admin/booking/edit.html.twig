{% extends "admin/base.html.twig" %}
{% block title %}
    Modification de la  reservation nº {{booking.id}}
{% endblock title %}
{% block body %}
    <div class="container my-5">
        <h1> Modification de la reservation nº{{booking.id}}</h1>
        {{form_start(form)
        }}
      <div class="row">
          <div class="col">
            {{form_row(form.startDate)}}
            {{form_row(form.endDate)}}
            {{form_row(form.comment)}}
          </div>
          <div class="col">
            {{form_row(form.booker)}}
            {{form_row(form.ad)}}
            <button type="submit"class="btn btn-success">
                <i class="fas fa-check"></i>
                Enregistrer les modification
            </button>
          </div>
      </div>
      {{form_end(form)}}
    </div>
{% endblock body %}